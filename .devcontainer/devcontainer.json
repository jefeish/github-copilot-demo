{
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "hostRequirements": {
    "cpus": 4
  },
  "name": "Copilot Demo",
  "postCreateCommand": "sudo cp --force ./.devcontainer/welcome-message.txt /usr/local/etc/vscode-dev-containers/first-run-notice.txt",
  "customizations": {
    "vscode": {
      "extensions": [
        "github.copilot",
        "github.copilotChat",
        "github.copilotLabs",
        "vscode.vs-browser",
        "vsls-contrib.codetour"
      ]
    }
  }
}
